{
  "name": "raffle-solana",
  "version": "1.0.0",
  "description": "Solana raffle site with automatic draws every 20 minutes",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "typecheck": "tsc --noEmit",
    "worker:dev": "wrangler dev",
    "worker:deploy": "wrangler deploy",
    "db:migrate": "wrangler d1 migrations apply raffle-db",
    "format": "prettier --write .",
    "rewards:install": "cd workers/rewards-tracker && npm install",
    "rewards:dev": "cd workers/rewards-tracker && npm run dev",
    "rewards:deploy": "cd workers/rewards-tracker && npm run deploy",
    "rewards:test": "cd workers/rewards-tracker && npm test"
  },
  "dependencies": {
    "next": "14.2.5",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "@solana/web3.js": "^1.95.8",
    "@solana/spl-token": "^0.4.8",
    "clsx": "^2.1.1",
    "date-fns": "^3.6.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241011.0",
    "@types/node": "^22.5.0",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "autoprefixer": "^10.4.20",
    "eslint": "^8.57.0",
    "eslint-config-next": "14.2.5",
    "postcss": "^8.4.41",
    "prettier": "^3.3.3",
    "tailwindcss": "^3.4.10",
    "typescript": "^5.5.4",
    "wrangler": "^3.88.0"
  }
}